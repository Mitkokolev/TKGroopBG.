@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-page-wrapper">
    <div class="auth-card-box">
        <h2 class="auth-title">Вход в акаунта</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control auth-input" autocomplete="username" placeholder="Имейл" />
                <label asp-for="Input.Email">Имейл</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.Password" class="form-control auth-input" autocomplete="current-password" placeholder="Парола" />
                <label asp-for="Input.Password">Парола</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button id="login-submit" type="submit" class="btn-auth btn-auth-danger w-100 mb-3">Вход</button>

            <div class="text-center">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                    Нямате акаунт? Регистрирайте се
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
