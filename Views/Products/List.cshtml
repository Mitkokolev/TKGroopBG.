@model IEnumerable<TKGroopBG.Models.Products>

@{
    var category = ViewBag.Category as string ?? "Продукти";

    ViewData["Title"] = category;
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (User.IsInRole("Admin"))
    {
        ViewBag.AdminButtons = $@"
            <a class='btn btn-outline-danger' href='/Products/Create?category={category}'>
                + Добави продукт в {category}
            </a>";
    }
}

<div class="container mt-5 text-center">
    <h2 class="text-danger fw-bold mb-2">@category</h2>
    <p class="text-muted mb-4">Продукти от избраната категория.</p>

    <div class="products-grid">
        @foreach (var item in Model)
        {
            var fallback = Url.Content("~/images/default.jpg");
            var imagePath = string.IsNullOrEmpty(item.ImageFileName)
            ? fallback
            : Url.Content("~/product-images/" + item.ImageFileName);

            <!-- цялата карта води към Details -->
            <a asp-action="Details"
               asp-route-id="@item.Id"
               class="product-card product-clickable">

                <img src="@imagePath"
                     alt="@item.Name"
                     class="product-img"
                     onerror="this.src='@fallback'" />

                <div class="product-info">
                    <h3>@item.Name</h3>

                    @if (!string.IsNullOrWhiteSpace(item.Description))
                    {
                        <p>@item.Description</p>
                    }

                    <span class="product-price">@item.Price.ToString("0.00") лв.</span>

                    @if (!string.IsNullOrWhiteSpace(item.Category))
                    {
                        <p class="text-muted small">@item.Category</p>
                    }
                </div>
            </a>

            @if (User.IsInRole("Admin"))
            {
                <div class="product-actions mt-2 d-flex gap-1 justify-content-center">
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-secondary">
                         Редактирай
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-danger">
                         Изтрий
                    </a>
                </div>
            }
        }

    </div>
</div>


