@model IEnumerable<TKGroopBG.Models.Products>

@{

    ViewData["Title"] = "Продукти";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (User.IsInRole("Admin"))
    {
        ViewBag.AdminButtons = @"
            <a class='btn btn-outline-danger' href='/Products/Create'>
                + Добави нов продукт
            </a>
        ";
    }
}

<div class="container mt-5 text-center">
    <h2 class="text-danger fw-bold mb-2">Нашите продукти</h2>
    <p class="text-muted mb-4">Добре дошли в секцията с продукти.</p>

    @await Html.PartialAsync("_AdminBar")   <!-- ТУК ДА ГО ИМА -->

    <div class="products-grid">
        @foreach (var item in Model)
        {
            var imageName = $"{(item.Name ?? string.Empty).Replace(" ", "_")}.jpg";
            var imagePath = Url.Content($"~/images/{imageName}");
            var fallback = Url.Content("~/images/default.jpg");

            <div class="product-card">
                <img src="@imagePath"
                     alt="@item.Name"
                     class="product-img"
                     onerror="this.src='@fallback'" />

                <div class="product-info">
                    <h3>@item.Name</h3>

                    @if (!string.IsNullOrWhiteSpace(item.Description))
                    {
                        <p>@item.Description</p>
                    }

                    <span class="product-price">@item.Price.ToString("0.00") лв.</span>

                    @if (!string.IsNullOrWhiteSpace(item.Category))
                    {
                        <p class="text-muted small">@item.Category</p>
                    }

                    <div class="product-actions mt-2">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Детайли</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Редактирай</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Изтрий</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
