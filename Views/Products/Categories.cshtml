@model IEnumerable<string>
@{
    ViewData["Title"] = "Продукти";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="home-grid">
    @foreach (var cat in Model)
    {
        var img = cat switch
        {
            "Алуминиеви изделия" => Url.Content("~/images/categories/aluminium.jpg"),
            "PVC дограма" => Url.Content("~/images/categories/pvc.jpg"),
            "Щори" => Url.Content("~/images/categories/blinds.jpg"),
            "Врати" => Url.Content("~/images/categories/doors.jpg"),
            "Мрежи против насекоми" => Url.Content("~/images/categories/nets.jpg"),
            _ => Url.Content("~/images/default.jpg")
        };

        <a asp-action="Category" asp-route-id="@cat" class="menu-card fade-up">
            <img src="@img" class="card-img" alt="@cat" />
            <div class="card-overlay">@cat</div>
        </a>
    }
</div>


