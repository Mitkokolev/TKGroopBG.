@model IEnumerable<string>

@{
    ViewData["Title"] = "Продукти";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (User.IsInRole("Admin"))
    {
        ViewBag.AdminButtons = @"
            <a class='btn btn-outline-danger' href='/Products/Create'>
                + Добави нов продукт
            </a>";
    }
}

<div class="container mt-5 text-center">
    <h2 class="text-danger fw-bold mb-2">Продуктови категории</h2>
    <p class="text-muted mb-4">Изберете категория, за да видите продуктите.</p>

    <div class="home-grid">
        @foreach (var cat in Model)
        {
            <a asp-action="Category" asp-route-id="@cat" class="menu-card">
                <img src="~/images/default.jpg" class="card-img" alt="@cat" />
                <div class="card-overlay">@cat</div>
            </a>
        }
    </div>
</div>


