@model IEnumerable<string>
@{
    ViewData["Title"] = "Продукти";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="home-hero fade-up">
    <div class="hero-logo">
        <div class="logo-icon">
            <div class="tk-symbol">
                <span class="t">T</span><span class="k">K</span>
                <div class="arc"></div>
            </div>
        </div>
        <h1 class="logo-text">Категории продукти</h1>
        <h3 class="logo-subtext">Изберете категория</h3>
    </div>

    <div class="home-grid">
        @foreach (var cat in Model)
        {
            var safe = cat.Replace(" ", "_");
            var src = Url.Content($"~/images/categories/{safe}.jpg");
            var fallback = Url.Content("~/images/default.jpg");

            <a asp-action="Category" asp-route-id="@cat" class="menu-card fade-up">
                <img src="@src" class="card-img" alt="@cat" onerror="this.src='@fallback'">
                <div class="card-overlay">@cat</div>
            </a>
        }
    </div>
</section>

