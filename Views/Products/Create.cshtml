@model TKGroopBG.Models.Products
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Създай продукт";
}

<h2 class="text-danger fw-bold mb-3">Създаване на продукт</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Име на продукт</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">Цена (лв.)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="control-label">Категория</label>
                <select asp-for="Category"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.Categories))">
                    <option value="">-- избери категория --</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

