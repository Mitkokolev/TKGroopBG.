@{
    ViewData["Title"] = "TK Group BG - Начало";
}

<div class="logo-section">
    <div class="logo-icon">
        <div class="tk-symbol">
            <span class="t">T</span><span class="k">K</span>
            <div class="arc"></div>
        </div>
    </div>
    <div class="logo-text">TK GROUP BG</div>
    <div class="logo-subtext">INDUSTRIAL SOLUTIONS</div>
</div>

<div class="home-grid">
    <a asp-controller="Products" asp-action="Index" class="menu-card">
        <img src="~/images/products.jpg" alt="Продукти" class="card-img">
        <div class="card-overlay">Продукти</div>
    </a>
    <a asp-controller="Galleries" asp-action="Index" class="menu-card">
        <img src="~/images/gallery.jpg" alt="Галерия" class="card-img">
        <div class="card-overlay">Галерия</div>
    </a>
  
</div>

