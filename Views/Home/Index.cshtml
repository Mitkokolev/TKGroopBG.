@{
    ViewData["Title"] = "Начало";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="home-hero fade-up" role="region" aria-label="Начална секция">
    <div class="hero-wrap">
        <div class="hero-logo">
            <div class="logo-icon">
                <div class="tk-symbol" aria-hidden="true">
                    <span class="t">T</span><span class="k">K</span>
                    <div class="arc"></div>
                </div>
            </div>
            <h1 class="logo-text">TKGroopBG</h1>
            <h3 class="logo-subtext">INDUSTRIAL SOLUTIONS</h3>
        </div>

        <div class="home-grid">
            <a asp-controller="Products" asp-action="Index" class="menu-card fade-up" style="animation-delay:.05s">
                <img src="~/images/products.jpg" class="card-img" alt="Продукти">
                <div class="card-overlay">Продукти</div>
            </a>

            <a asp-controller="Galleries" asp-action="Index" class="menu-card fade-up" style="animation-delay:.1s">
                <img src="~/images/gallery.jpg" class="card-img" alt="Галерия">
                <div class="card-overlay">Галерия</div>
            </a>
        </div>
    </div>
</section>

