@model IEnumerable<TKGroopBG.Models.Order>
@{
    ViewData["Title"] = "Заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-danger fw-bold mb-3">Заявки</h2>

    <table class="table table-striped table-bordered bg-white">
        <thead>
            <tr>
                <th>#</th>
                <th>Име</th>
                <th>Телефон</th>
                <th>Email</th>
                <th>Дата</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.CustomerName</td>
                    <td>@o.Phone</td>
                    <td>@o.Email</td>
                    @o.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-dark" asp-action="Details" asp-route-id="@o.Id">Детайли</a>

                        <form asp-action="Delete" asp-route-id="@o.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-outline-danger" type="submit">Изтрий</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

