@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var title = ViewData["Title"] ?? "TKGroopBG";
}
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - TKGroopBG</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Home Button -->
    <a asp-controller="Home" asp-action="Index" class="home-btn" title="Начало">
        <i class="fas fa-home" aria-hidden="true"></i>
        <span class="visually-hidden">Начало</span>
    </a>

    <!-- Back Button (един екран назад) -->
    <button type="button"
            class="back-btn"
            title="Назад"
            onclick="history.back()">
        <i class="fas fa-arrow-left" aria-hidden="true"></i>
        <span class="visually-hidden">Назад</span>
    </button>

    <!-- 🛒 Cart Button (вляво от auth) -->
    <a asp-controller="Cart" asp-action="Index" class="cart-btn" title="Количка">
        <i class="fas fa-shopping-cart"></i>
        <span id="cart-count" class="cart-count-badge">0</span>
    </a>

    <!-- Auth Buttons -->
    <div class="auth-bar">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="auth-user">
                <span class="auth-hello">Здрасти, @User.Identity?.Name</span>
                <form class="d-inline"
                      asp-area="Identity"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="~/"
                      method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-auth btn-auth-danger">Изход</button>
                </form>
            </div>
        }
        else
        {
            <a class="btn-auth" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            <a class="btn-auth btn-auth-danger" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        }
    </div>

    <!-- Content -->
    <main class="tk-main">
        <partial name="_AdminBar" />
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-container">
            <div class="footer-section">
                <strong>TKGroopBG</strong><br />
                Офис: Изгрев бл. 5
            </div>

            <div class="footer-section">
                <span>Email:</span>
                <a href="mailto:TKGroopBG@abv.bg">TKGroopBG@abv.bg</a><br />
                <span>Телефон:</span>
                <a href="tel:+35987723967">087723967</a>
            </div>

            <div class="footer-section footer-social">
                <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
                    <i class="fab fa-facebook"></i>
                </a>
            </div>
        </div>

        <p class="footer-copy">© @DateTime.Now.Year TKGroopBG — Всички права запазени</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        @if (ViewContext.RouteData.Values["Action"]?.ToString() != "Index")
        {
                <a href="javascript:history.back()" class="back-btn" title="Назад">
                    <i class="fas fa-arrow-left"></i>
                </a>
        }

        // глобална функция – показва броя продукти в количката
        function updateCartCount() {
            let count = 0;
            try {
                const raw = localStorage.getItem("tk_cart");
                if (raw) {
                    const arr = JSON.parse(raw);
                    if (Array.isArray(arr)) {
                        count = arr.length;
                    }
                }
            } catch (e) {
                count = 0;
            }

            const badge = document.getElementById("cart-count");
            if (badge) {
                badge.textContent = count;
            }
        }

        function updateCartBadge() {
            updateCartCount();
        }

        document.addEventListener("DOMContentLoaded", updateCartCount);

        window.addEventListener("storage", function (e) {
            if (e.key === "tk_cart") {
                updateCartCount();
            }
        });
    </script>
</body>
</html>










