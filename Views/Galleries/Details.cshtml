@model TKGroopBG.Models.Gallery

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var imagePath = string.IsNullOrEmpty(Model.ImageFileName)
        ? Url.Content("~/images/default.jpg")
        : Url.Content("~/gallery-images/" + Model.ImageFileName);
}

<div class="container mt-5">
    <div class="row gx-4 gy-4">
        <div class="col-lg-8">
            <div class="product-main-image-box">
                <img src="@imagePath"
                     alt="@Model.Title"
                     class="product-main-image" />
            </div>
        </div>

        <div class="col-lg-4">
            <div class="product-info-card">
                <h2 class="text-danger fw-bold mb-2">@Model.Title</h2>

                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <p class="text-muted">@Model.Description</p>
                }

                <a asp-action="Index" class="btn btn-outline-secondary mt-3">
                    ← Обратно към галерията
                </a>
            </div>
        </div>
    </div>
</div>
